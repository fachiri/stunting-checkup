<div class="page-content">
  <section class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-body px-4 py-4-5">
          <div class="d-flex justify-content-between align-items-center">
            <a href="/dasbor/master/balita" class="btn btn-primary mb-4">
              Kembali
            </a>
            <div>
              <button type="button" class="btn btn-warning mb-4" data-bs-toggle="modal" data-bs-target="#checkupBalitaModal">
                Checkup
              </button>
              <button type="button" class="btn btn-info mb-4" data-bs-toggle="modal" data-bs-target="#editBalitaModal">
                Edit
              </button>
              <a href="/dasbor/master/balita/<%= data.balita.uuid %>/delete" class="btn btn-danger mb-4">
                Hapus
              </a>
            </div>
          </div>
          <div class="modal fade" id="checkupBalitaModal" tabindex="-1" aria-labelledby="checkupBalitaModalLabel"
            aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h1 class="modal-title fs-5" id="checkupBalitaModalLabel">Checkup</h1>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form action="/dasbor/master/balita/<%= data.balita.uuid %>/checkup" method="POST">
                  <div class="modal-body">
                    <p>
                      Anda akan melakukan Checkup pada balita atas nama
                      <b><%= data.balita.nama %></b>
                      dengan data sebagai berikut:
                    </p>
                    <table class="table table-striped">
                      <tr>
                        <td>Umur</td>
                        <th><%= data.balita.umur %> Bulan</th>
                      </tr>
                      <tr>
                        <td>Berat Badan</td>
                        <th><%= data.balita.berat_badan %> kg</th>
                      </tr>
                      <tr>
                        <td>Tinggi Badan</td>
                        <th><%= data.balita.tinggi_badan %> cm</th>
                      </tr>
                    </table>
                    <p>Jika terdapat perubahan data, silakan edit datanya terlebih dahulu.</p>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Batal</button>
                    <button type="submit" class="btn btn-primary">Checkup</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
          <div class="modal fade" id="editBalitaModal" tabindex="-1" aria-labelledby="editBalitaModalLabel"
            aria-hidden="true">
            <div class="modal-dialog modal-lg modal-dialog-scrollable">
              <form action="<%= baseUrl %>/dasbor/master/balita/<%= data.balita.uuid %>/update" method="POST" class="modal-content">
                <div class="modal-header">
                  <h1 class="modal-title fs-5" id="editBalitaModalLabel">Edit Balita</h1>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                  <div class="mb-3">
                    <label for="nama" class="form-label">Nama Lengkap</label>
                    <input type="text" class="form-control" name="nama" id="nama" value="<%= data.balita.nama %>">
                  </div>
                  <div class="mb-3">
                    <label for="alamat" class="form-label">Alamat</label>
                    <textarea class="form-control" name="alamat" id="alamat"><%= data.balita.alamat %></textarea>
                  </div>
                  <div class="mb-3">
                    <label for="jenis_kelamin" class="form-label">Jenis Kelamin</label>
                    <select class="form-select" name="jenis_kelamin" id="jenis_kelamin" aria-label="Jenis Kelamin">
                      <option value="Laki-laki" <%= data.balita.jenis_kelamin == 'Laki-laki' ? 'selected' : null %>>Laki-laki</option>
                      <option value="Perempuan" <%= data.balita.jenis_kelamin == 'Perempuan' ? 'selected' : null %>>Perempuan</option>
                    </select>
                  </div>
                  <div class="row mb-3">
                    <div class="col-4">
                      <label class="form-label">Umur</label>
                      <div class="row">
                        <div class="col-6">
                          <select class="form-select" name="tahun" id="tahun">
                            <option value="" hidden>Tahun..</option>
                            <option <%= Math.floor(+data.balita.umur / 12) == 1 ? 'selected' : null %> value="1">1 Tahun</option>
                            <option <%= Math.floor(+data.balita.umur / 12) == 2 ? 'selected' : null %> value="2">2 Tahun</option>
                            <option <%= Math.floor(+data.balita.umur / 12) == 3 ? 'selected' : null %> value="3">3 Tahun</option>
                            <option <%= Math.floor(+data.balita.umur / 12) == 4 ? 'selected' : null %> value="4">4 Tahun</option>
                            <option <%= Math.floor(+data.balita.umur / 12) == 5 ? 'selected' : null %> value="5">5 Tahun</option>
                          </select>
                        </div>
                        <div class="col-6">
                          <select class="form-select" name="bulan" id="bulan">
                            <option value="" hidden>Bulan..</option>
                            <option <%= +data.balita.umur % 12 == 0 ? 'selected' : null %> value="0">0 Bulan</option>
                            <option <%= +data.balita.umur % 12 == 1 ? 'selected' : null %> value="1">1 Bulan</option>
                            <option <%= +data.balita.umur % 12 == 2 ? 'selected' : null %> value="2">2 Bulan</option>
                            <option <%= +data.balita.umur % 12 == 3 ? 'selected' : null %> value="3">3 Bulan</option>
                            <option <%= +data.balita.umur % 12 == 4 ? 'selected' : null %> value="4">4 Bulan</option>
                            <option <%= +data.balita.umur % 12 == 5 ? 'selected' : null %> value="5">5 Bulan</option>
                            <option <%= +data.balita.umur % 12 == 6 ? 'selected' : null %> value="6">6 Bulan</option>
                            <option <%= +data.balita.umur % 12 == 7 ? 'selected' : null %> value="7">7 Bulan</option>
                            <option <%= +data.balita.umur % 12 == 8 ? 'selected' : null %> value="8">8 Bulan</option>
                            <option <%= +data.balita.umur % 12 == 9 ? 'selected' : null %> value="9">9 Bulan</option>
                            <option <%= +data.balita.umur % 12 == 10 ? 'selected' : null %> value="10">10 Bulan</option>
                            <option <%= +data.balita.umur % 12 == 11 ? 'selected' : null %> value="11">11 Bulan</option>
                          </select>
                        </div>
                      </div>
                    </div>
                    <div class="col-4">
                      <label for="berat_badan" class="form-label">Berat Badan (BB)</label>
                      <input type="number" class="form-control" name="berat_badan" id="berat_badan" value="<%= data.balita.berat_badan %>">
                    </div>
                    <div class="col-4">
                      <label for="tinggi_badan" class="form-label">Tinggi Badan (TB)</label>
                      <input type="number" class="form-control" name="tinggi_badan" id="tinggi_badan" value="<%= data.balita.tinggi_badan %>">
                    </div>
                  </div>
                  <div class="mb-3">
                    <label for="status_imunisasi" class="form-label">Status Imunisasi</label>
                    <select class="form-select" name="status_imunisasi" id="status_imunisasi" aria-label="Status Imunisasi">
                      <option value="Lengkap" <%= data.balita.status_imunisasi == 'Lengkap' ? 'selected' : null %>>Lengkap</option>
                      <option value="Belum lengkap" <%= data.balita.status_imunisasi == 'Belum lengkap' ? 'selected' : null %>>Belum lengkap</option>
                    </select>
                  </div>
                  <div class="mb-3">
                    <label for="status_checkup" class="form-label">Status Checkup</label>
                    <select class="form-select" name="status_checkup" id="status_checkup" aria-label="Status Imunisasi">
                      <option value="Sudah Checkup" <%= data.balita.status_checkup == 'Sudah Checkup' ? 'selected' : null %>>Sudah Checkup</option>
                      <option value="Belum Checkup" <%= data.balita.status_checkup == 'Belum Checkup' ? 'selected' : null %>>Belum Checkup</option>
                    </select>
                  </div>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                  <button type="submit" class="btn btn-primary">Submit</button>
                </div>
              </form>
            </div>
          </div>
          <div class="row mb-3 pb-3 border-bottom border-2">
            <div class="col-4 fw-bold">Nama</div>
            <div class="col-8"><%= data.balita.nama %></div>
          </div>
          <div class="row mb-3 pb-3 border-bottom border-2">
            <div class="col-4 fw-bold">Alamat</div>
            <div class="col-8"><%= data.balita.alamat %></div>
          </div>
          <div class="row mb-3 pb-3 border-bottom border-2">
            <div class="col-4 fw-bold">Jenis Kelamin</div>
            <div class="col-8"><%= data.balita.jenis_kelamin %></div>
          </div>
          <div class="row mb-3 pb-3 border-bottom border-2">
            <div class="col-4 fw-bold">Berat Badan</div>
            <div class="col-8"><%= data.balita.berat_badan %></div>
          </div>
          <div class="row mb-3 pb-3 border-bottom border-2">
            <div class="col-4 fw-bold">Tinggi Badan</div>
            <div class="col-8"><%= data.balita.tinggi_badan %></div>
          </div>
          <div class="row mb-3 pb-3 border-bottom border-2">
            <div class="col-4 fw-bold">Umur</div>
            <div class="col-8"><%= data.balita.umur %></div>
          </div>
          <div class="row mb-3 pb-3">
            <div class="col-4 fw-bold">Status Imunisasi</div>
            <div class="col-8"><%= data.balita.status_imunisasi %></div>
          </div>
          <div class="row mb-3 pb-3">
            <div class="col-4 fw-bold">Status Checkup</div>
            <div class="col-8"><%= data.balita.status_checkup %></div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>