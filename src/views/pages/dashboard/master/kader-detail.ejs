<div class="page-content">
  <section class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-body px-4 py-4-5">
          <div class="d-flex justify-content-between align-items-center">
            <a href="/dasbor/master/kader" class="btn btn-primary mb-4">
              Kembali
            </a>
          <div>
            <button type="button" class="btn btn-info mb-4" data-bs-toggle="modal" data-bs-target="#editKaderModal">
              Edit
            </button>
            <a href="/dasbor/master/kader/<%= data.kader.uuid %>/delete" class="btn btn-danger mb-4">
              Hapus
            </a>
          </div>
          </div>
          <div class="modal fade" id="editKaderModal" tabindex="-1" aria-labelledby="editKaderModalLabel"
            aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
              <div class="modal-content">
                <div class="modal-header">
                  <h1 class="modal-title fs-5" id="editKaderModalLabel">Edit Kader</h1>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form action="/dasbor/master/kader/<%= data.kader.uuid %>/update" method="POST">
                  <div class="modal-body">
                    <div class="mb-3">
                      <label for="name" class="form-label">Nama Lengkap</label>
                      <input type="text" class="form-control" name="name" id="name" value="<%= data.kader.name %>">
                    </div>
                    <div class="mb-3">
                      <label for="username" class="form-label">Username</label>
                      <input type="text" class="form-control" name="username" id="username" value="<%= data.kader.username %>">
                    </div>
                    <div class="mb-3">
                      <label for="kecamatan_puskesmas" class="form-label">Kecamatan</label>
                      <input type="text" class="form-control" name="kecamatan_puskesmas" id="kecamatan_puskesmas" value="<%= data.kader.kecamatan_puskesmas %>">
                    </div>
                    <div class="mb-3">
                      <label for="nama_puskesmas" class="form-label">Puskesmas</label>
                      <input type="text" class="form-control" name="nama_puskesmas" id="nama_puskesmas" value="<%= data.kader.nama_puskesmas %>">
                    </div>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Submit</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
          <div class="row mb-3 pb-3 border-bottom border-2">
            <div class="col-4 fw-bold">Nama</div>
            <div class="col-8"><%= data.kader.name %></div>
          </div>
          <div class="row mb-3 pb-3 border-bottom border-2">
            <div class="col-4 fw-bold">Username</div>
            <div class="col-8"><%= data.kader.username %></div>
          </div>
          <div class="row mb-3 pb-3 border-bottom border-2">
            <div class="col-4 fw-bold">Kecamatan</div>
            <div class="col-8"><%= data.kader.kecamatan_puskesmas %></div>
          </div>
          <div class="row mb-3 pb-3 border-bottom border-2">
            <div class="col-4 fw-bold">Puskesmas</div>
            <div class="col-8"><%= data.kader.nama_puskesmas %></div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>