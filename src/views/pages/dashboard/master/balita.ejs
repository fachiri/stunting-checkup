<div class="page-content">
  <section class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-body px-4 py-4-5">
          <button type="button" class="btn btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#tambahBalitaModal">
            <i class="bi bi-plus-square"></i>
            Tambah Data
          </button>
          <a href="/dasbor/master/balita/print/preview" class="btn btn-success mb-3 ms-1">
            <i class="bi bi-printer"></i>
            Print
          </a>
          <a href="/dasbor/master/balita/sync/export" class="btn btn-success mb-3 ms-1">
            <i class="bi bi-box-arrow-left"></i>
            Ekspor
          </a>
          <button type="button" class="btn btn-success mb-3 ms-1" data-bs-toggle="modal"
            data-bs-target="#importBalitaModal">
            <i class="bi bi-box-arrow-in-right"></i>
            Import
          </button>
          <div class="modal fade" id="tambahBalitaModal" tabindex="-1" aria-labelledby="tambahBalitaModalLabel"
            aria-hidden="true">
            <div class="modal-dialog modal-lg modal-dialog-scrollable">
              <form method="POST" action="<%= baseUrl %>/dasbor/master/balita" class="modal-content">
                <div class="modal-header">
                  <h1 class="modal-title fs-5" id="tambahBalitaModalLabel">Tambah Balita</h1>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                  <div class="mb-3">
                    <label for="nama" class="form-label">Nama Lengkap Ananda</label>
                    <input type="text" class="form-control" name="nama" id="nama"
                      placeholder="Masukkan Nama Lengkap Ananda" value="<%= oldData[0]?.nama %>">
                  </div>
                  <div class="mb-3">
                    <label for="tanggal_lahir" class="form-label">Tanggal Lahir</label>
                    <input type="date" class="form-control" name="tanggal_lahir" id="tanggal_lahir"
                      placeholder="Masukkan Tanggal Lahir" value="<%= oldData[0]?.tanggal_lahir %>">
                  </div>
                  <div class="mb-3">
                    <label for="jenis_kelamin" class="form-label">Jenis Kelamin</label>
                    <select class="form-select" name="jenis_kelamin" id="jenis_kelamin" aria-label="Jenis Kelamin">
                      <option value="" hidden>-Pilih-</option>
                      <option value="Laki-laki" <%=oldData[0]?.jenis_kelamin=='Laki-laki' ? 'selected' : null %>
                        >Laki-laki</option>
                      <option value="Perempuan" <%=oldData[0]?.jenis_kelamin=='Perempuan' ? 'selected' : null %>
                        >Perempuan</option>
                    </select>
                  </div>
                  <div class="mb-3">
                    <label for="nama_ibu" class="form-label">Nama Ibu</label>
                    <input type="text" class="form-control" name="nama_ibu" id="nama_ibu"
                      placeholder="Masukkan Nama Ibu" value="<%= oldData[0]?.nama_ibu %>">
                  </div>
                  <div class="mb-3">
                    <label for="alamat" class="form-label">Alamat</label>
                    <textarea class="form-control" name="alamat" id="alamat"
                      placeholder="Masukkan Alamat Lengkap"><%= oldData[0]?.alamat %></textarea>
                  </div>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                  <button type="submit" class="btn btn-primary">Submit</button>
                </div>
              </form>
            </div>
          </div>
          <div class="modal fade" id="importBalitaModal" tabindex="-1" aria-labelledby="importBalitaModalLabel"
            aria-hidden="true">
            <div class="modal-dialog modal-dialog-scrollable">
              <form method="POST" action="/dasbor/master/balita/sync/import" class="modal-content"
                enctype="multipart/form-data">
                <div class="modal-header">
                  <h1 class="modal-title fs-5" id="importBalitaModalLabel">Import Balita</h1>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                  <div class="mb-3">
                    <label for="file" class="form-label">File</label>
                    <input type="file" class="form-control" name="file" id="file">
                  </div>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                  <button type="submit" class="btn btn-primary">Submit</button>
                </div>
              </form>
            </div>
          </div>
          <table class="table table-striped" id="tabel-balita">
            <thead>
              <tr>
                <th>Nama</th>
                <th>Tanggal Lahir</th>
                <th>Jenis Kelamin</th>
                <th>Aksi</th>
              </tr>
            </thead>
            <tbody>
              <% data.balita.forEach(e=> { %>
                <tr>
                  <td>
                    <%= e.nama %>
                  </td>
                  <td>
                    <%= e.tanggal_lahir %>
                  </td>
                  <td>
                    <%= e.jenis_kelamin %>
                  </td>
                  <td>
                    <a href="/dasbor/master/balita/<%= e.uuid %>" class="badge bg-primary">
                      <i class="bi bi-list-ul"></i>
                      Detail
                    </a>
                  </td>
                </tr>
                <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </section>
</div>